#!/usr/bin/make -f

DISTRIBUTION = $(shell sed -n "s/^VERSION_CODENAME=//p" /etc/os-release)
VERSION = 2.0.0
PACKAGEVERSION = $(VERSION)-0~$(DISTRIBUTION)0
TARBALL = v$(VERSION).tar.gz
URL = https://github.com/vrischmann/sshtrap/archive/refs/tags/$(TARBALL)

%:
	dh $@

override_dh_auto_clean:
override_dh_auto_test:
override_dh_auto_build:
override_dh_auto_install:
	wget -N --progress=dot:mega $(URL)
	tar --strip-components=1 -xf $(TARBALL)
	zig build
	mkdir -p debian/sshtrap/usr/bin
	cp zig-out/bin/sshtrap debian/sshtrap/usr/bin/sshtrap

override_dh_gencontrol:
	dh_gencontrol -- -v$(PACKAGEVERSION)
